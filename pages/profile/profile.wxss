/* pages/profile/profile.wxss */
.user {
    background-color: #3A4862;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    color: #fff;
    height: 300rpx;
}
.user image {
    width: 200rpx;
    height: 200rpx;
}

.page {
    background-color: #F0F0F0;
}
.user_info {
    position: relative;
    background-color: #fff;
    padding: 30rpx 0;
    padding-left: 30rpx;
    border-bottom: 1px solid #ccc;
}
.user_info::after{
    content: "";
    display: block;
    width: 20rpx;
    height: 20rpx;
    border-top: 4rpx solid #999;
    border-right: 4rpx solid #999;
    position: absolute;
    right: 50rpx;
    transform: rotate(45deg);
    top:45rpx;
  }
  .box {
      height: 30rpx;
  }