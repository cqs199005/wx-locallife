/* pages/list/list.wxss */
.search {
  display: flex;
  border: 1px solid #ccc;
  margin: 10rpx 20rpx;
  background-color: #fff;
  justify-content: space-between;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  align-items: center;
}

.list_body  {
  
  background-color: #fff;
}
.list_body .item {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
.list_body .item image {
  width: 200rpx;
  height: 200rpx;
}
.list_text {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  width: 400rpx;
}
.list_body .num {
  font-size: 30rpx;
  background-color: red;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  padding: 0 10rpx;
}
.more {
  text-align: center;
  padding: 20rpx 0;
  color: #444;
}